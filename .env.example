# ===================================
# IDEAS BROWSER - ENVIRONMENT CONFIG
# ===================================

# NODE ENVIRONMENT
NODE_ENV=development

# ===================================
# DATABASE CONFIGURATION
# ===================================

# MongoDB Connection String
# Local: mongodb://localhost:27017/opportunity-radar
# Atlas: mongodb+srv://user:password@cluster.mongodb.net/opportunity-radar
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/opportunity-radar

# Database Name
DB_NAME=opportunity-radar

# ===================================
# SERVER CONFIGURATION
# ===================================

# Backend Server Port
PORT=5000

# Backend Server Host
HOST=localhost

# API Version
API_VERSION=v1

# ===================================
# AUTHENTICATION & SECURITY
# ===================================

# JWT Secret Key (use a strong, random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token Expiration (e.g., 7d, 24h, 1w)
JWT_EXPIRE=7d

# JWT Refresh Token Secret
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this

# JWT Refresh Token Expiration
JWT_REFRESH_EXPIRE=30d

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===================================
# EXTERNAL APIs CONFIGURATION
# ===================================

# REDDIT API
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=IdeasBrowser/1.0 (by YourUsername)

# YOUTUBE API
YOUTUBE_API_KEY=your_youtube_api_key

# TWITTER/X API
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# ===================================
# EMAIL CONFIGURATION (Optional)
# ===================================

# Email Service Provider
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@ideasbrowser.com

# ===================================
# FRONTEND CONFIGURATION
# ===================================

# Frontend Port (Next.js)
FRONTEND_PORT=3000

# Frontend Host
FRONTEND_HOST=localhost

# API Base URL for Frontend
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1

# ===================================
# LOGGING & MONITORING
# ===================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Enable Request Logging
ENABLE_REQUEST_LOGGING=true

# ===================================
# RATE LIMITING
# ===================================

# Rate Limit Window (in minutes)
RATE_LIMIT_WINDOW=15

# Rate Limit Max Requests per Window
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# DEVELOPMENT & DEBUG
# ===================================

# Enable Debug Mode
DEBUG=false

# Enable Request Payload Logging
LOG_REQUEST_BODY=false

# ===================================
# DOCKER CONFIGURATION
# ===================================

# Docker Database Host (for docker-compose)
DB_HOST=mongodb
DB_PORT=27017
